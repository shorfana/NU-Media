<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintCircleRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="8dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:id="@+id/link_gambar"
            android:layout_marginBottom="4dp"/>
        <TextView
            style="@style/format_text"
            android:layout_toRightOf="@id/link_gambar"
            android:id="@+id/ulamaName"
            android:text="Name"
            android:layout_marginTop="16dp" />
        <TextView
            style="@style/format_text"
            android:layout_below="@id/ulamaName"
            android:layout_toRightOf="@id/link_gambar"
            android:id="@+id/ulamaDate"
            android:text="Remarks" />
        <TextView
            style="@style/format_text"
            android:layout_below="@id/ulamaDate"
            android:layout_toRightOf="@id/link_gambar"
            android:id="@+id/ulamaPlace"
            android:text="Remarks" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/link_gambar"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_detail"
                android:textSize="11sp"
                android:background="@drawable/bg_color_doa_harian"
                android:textColor="#FFF"
                android:text="Detail"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>